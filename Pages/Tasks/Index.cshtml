@page
@model TaskBoardDemo.Pages.Tasks.IndexModel
@{
    ViewData["Title"] = "Tasks";
}
<h1>Tasks</h1>
<p><a asp-page="./Create">Create New Task</a></p>
<table class="table">
    <thead>
        <tr>
            <th>Title</th>
            <th>Due Date</th>
            <th>Status</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
@foreach (var task in Model.Tasks)
{
        <tr>
            <td>@task.Title</td>
            <td>@task.DueDate?.ToString("yyyy-MM-dd")</td>
            <td>@task.StatusId</td>
            <td>
                <a asp-page="./Details" asp-route-id="@task.Id">Details</a> |
                <a asp-page="./Edit" asp-route-id="@task.Id">Edit</a> |
                <a asp-page="./Delete" asp-route-id="@task.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>